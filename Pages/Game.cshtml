@page
@model FunLingo.Pages.GameModel
@{
    ViewData["Title"] = "FunLingo";
}

<div class="text-center">
    <h2 class="display-4">FunLingo - @ViewData["Players"] </h2>
</div>
<body>
    <form method="post">
        <table>
            <tr>
                <h3 class="display-3 text-center"> @ViewData["RandomNumber"]</h3>
            </tr>
            <tr>
                <label> @ViewData["RandomQuestion"]</label>
            </tr>
            <tr>
                <td style="padding: 0 15px">
                    <button type="submit" asp-page-handler="GenerateRandomNumber" >
                        GenerateRandomNumber
                    </button>
                </td>
                <td>
                    <button type="submit" asp-page-handler="GenerateRandomQuestion">
                        GenerateRandomQuestion
                    </button>
                </td>
            </tr>
        </table>

    </form>
</body>
